{
  "$schema": "https://moonlight-mod.github.io/manifest.schema.json",
  "id": "conversationNotify",
  "version": "1.0.0",
  "apiLevel": 2,
  "meta": {
    "name": "Conversation Notifier",
    "tagline": "??",
    "description": "??",
    "authors": ["MusicalArtist12"],
    "source": "https://github.com/MusicalArtist12/conversationNotify"
  },
  "settings": {
    "configurableDelay": {
      "displayName": "Cooldown time",
      "description": "in seconds",
      "type": "number",
      "default": 0,
      "advice": "none"
    },
    "ignoredChannels": {
      "type": "list",
      "displayName": "Ignored Channels List",
      "description": "channel ID",
      "advice": "none"
    },
    "groupMessages": {
      "type": "boolean",
      "displayName": "Group Messages during cooldown time",
      "advice": "reload"
    }
  }
}
